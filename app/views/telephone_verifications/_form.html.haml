  =f.label :call_attempts, 'CALL ATTEMPTS:'
  = f.text_field :call_attempts
  %br
  =f.label :residence, 'RESIDENCE:'
  = f.text_field :residence
  %br
  =f.label :office, 'OFFICE:'
  = f.text_field :office
  %br
  =f.label :verifiers_name, 'VERIFIERS NAME:'
  = f.text_field :verifiers_name
  %br
  = f.label :date_of_contact, 'DATE OF CONTACT:'       
  = f.date_select :date_of_contact,:start_year => Time.now.year - 30, :end_year => Time.now.year + 1, :include_blank => true 
