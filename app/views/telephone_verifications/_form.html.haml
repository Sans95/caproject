= form_for @telephone_verification do |f|
  - if @telephone_verification.errors.any?
    #error_explanation
      %h2= "#{pluralize(@telephone_verification.errors.count, "error")} prohibited this telephone_verification from being saved:"
      %ul
        - @telephone_verification.errors.full_messages.each do |msg|
          %li= msg
  
  =f.label :borrowers_name, 'BORROWERS NAME:'
  = f.text_field :borrowers_name
  %br
  = f.label :date_of_receipt, 'DATE OF RECEIPT:'       
